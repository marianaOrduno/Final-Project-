    <body>

        <div id="container1">

            <div id="text-container">

                <h1 id="title">Generate a <span id="green-text">Random Password</span></h1>

                <p id="description">Never use an insecure password again.</p>

                <button id="btn1">Generate Password</button>

            </div>

